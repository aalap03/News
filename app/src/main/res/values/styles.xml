<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialDrawerTheme.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/background_light</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>

    <style name="AppTheme_Dark" parent="MaterialDrawerTheme.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Dark</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>
        <item name="android:background">@color/background_dark</item>

        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>

    <style name="News_text_big">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="News_text_small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

</resources>
