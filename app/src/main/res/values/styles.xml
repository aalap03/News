<resources>

    <!--base theme-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textAppearance">@style/primaryTextBlack</item>
        <item name="android:textAppearanceMedium">@style/smallTextBlack</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="switchStyle">@style/switchLight</item>
        <item name="spinnerStyle">@style/Spinner_Dark</item>
        <item name="android:switchTextAppearance">@style/primaryTextBlack</item>
    </style>

    <!--dark theme-->
    <style name="AppTheme_Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Dark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textAppearance">@style/primaryTextWhite</item>
        <item name="android:textAppearanceMedium">@style/smallTextWhite</item>
        <item name="android:windowBackground">@color/colorPrimary_Dark</item>

        <item name="switchStyle">@style/switchDark</item>
        <item name="spinnerStyle">@style/Spinner_Light</item>
        <item name="android:switchTextAppearance">@style/primaryTextWhite</item>
    </style>

    <!--switch themes-->
    <style name="switchDark" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="trackTint">#e5e5e5</item>
        <item name="thumbTint">#C0C0C0</item>
        <item name="switchTextAppearance">@style/SwitchTextLight</item>
    </style>

    <style name="switchLight" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/colorPrimary</item>
        <item name="trackTint">#403F51B5</item>
        <item name="switchTextAppearance">@style/SwitchTextDark</item>
    </style>


    <style name="SwitchTextLight" parent="Base.TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SwitchTextDark" parent="Base.TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--text themes-->
    <style name="primaryTextBlack">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="primaryTextWhite">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="smallTextBlack">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="smallTextWhite">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:textColor">@color/white_90</item>
    </style>

    <!--dialog themes-->

    <style name="Spinner_Light" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textAppearance">@style/primaryTextWhite</item>
    </style>

    <style name="Spinner_Dark" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textAppearance">@style/primaryTextBlack</item>
    </style>
</resources>
