<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_daily_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:selectableItemBackground"
    android:padding="5dp">

    <include
        android:id="@+id/weather_layout_hourly"
        layout="@layout/weather_temperature_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".5" />

    <TextView
        android:id="@+id/weather_hourly_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".8"
        android:gravity="center"
        android:text="14 PM"
        android:textSize="12sp"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/weather_hourly_icon"
        android:layout_width="0dp"
        android:padding="5dp"
        android:layout_height="45dp"
        android:layout_weight=".7"
        android:foregroundGravity="center"
        android:src="@drawable/ic_clear_day" />

    <TextView
        android:id="@+id/weather_hourly_summary"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="12sp"
        android:text="Breezy and Mostly Cloudy"
        android:textColor="@android:color/white" />

</LinearLayout>

