<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/toolbar_template"
        app:layout_constraintBottom_toTopOf="@+id/weather_root"/>

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/weather_layout"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/news_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="72dp" />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:id="@+id/category_tab"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@android:color/holo_purple"
        app:tabBackground="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/weather_root"
        android:layout_height="wrap_content"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/category_tab"
        android:id="@+id/category_view_pager"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>